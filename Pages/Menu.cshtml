@page
@model PizzaPlanet.Pages.MenuModel
@{
}

<main id="menu" class="text-center">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/img/logo/logo.png" class="nav-logo" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Menu">Menu</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <header class="mt-3">
        <h1 class="text-capitalize text-black">Order Now</h1>
        <p>Only one pizza per order</p>
    </header>
    <div class="container mt-5">
        <div class="row">
            <h1 style="text-align:left;">Create a Custom Pizza</h1>
            <div class="col-12 mb-5 mt-4">
                <div class="w-100 row container-custom-pizza">
                    <div id="menu-custom-div">
                        <div>
                            <img src="~/img/Pizzas/Create.png" />
                            <div>
                                <h3 style="color: white;">Create Your Pizza Here</h3>
                                <p style="color: white;">Choose from variety of toppings</p>
                                <a class="btn btn-primary" style="float: left;" asp-area="" asp-page="Forms/CustomPizza">Create Pizza</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <h1 class="pb-5 mt-2">Or Choose One From Our Finest Selections</h1>
            @foreach (var pizza in Model.Mock_Pizza_DB)
            {
                var image_path = "~/img/Pizzas/" + (pizza.Image_Title + ".png");

                <div class="col-4 mb-5">
                    <a class="pizza-img"
                    asp-area=""
                    asp-page="Checkout/Checkout"
                    asp-route-Pizza_Name="@pizza.Pizza_Name"
                    asp-route-Image_Title="@pizza.Image_Title"
                    asp-route-Pizza_Price="@pizza.Final_Price">
                        <img src="@image_path" class="w-100" asp-append-version="true" />
                    </a>
                </div>
            }
        </div>
    </div>
    <footer class="mt-5 pb-4">
        <span>&copy; An ASP.NET Core Application. 2022.</span>
    </footer>
</main>